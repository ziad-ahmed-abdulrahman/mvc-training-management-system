@model InstructorWithDetails

@{
    ViewData["Title"] = "Instructor Details";
}

<div class="container mt-5">
    <h2 class="text-primary mb-4">
        <i class="bi bi-person-vcard me-2"></i> @ViewData["Title"]
    </h2>

    <!-- Instructor Info -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h4 class="text-secondary mb-3">
                <i class="bi bi-person-lines-fill me-2"></i> Instructor Information
            </h4>

            <div class="row g-3">
                <!-- ID -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Instructor ID</label>
                    <input type="text" class="form-control" value="@Model.Id" readonly />
                </div>

                <!-- Name -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Instructor Name</label>
                    <input type="text" class="form-control" value="@Model.Name" readonly />
                </div>

                <!-- Address -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Address</label>
                    <input type="text" class="form-control" value="@Model.Address" readonly />
                </div>

                <!-- Salary -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Salary</label>
                    <input type="text" class="form-control" value="@Model.Salary" readonly />
                </div>

                <!-- Department ID -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Department ID</label>
                    <input type="text" class="form-control" value="@Model.SelectedDepartment" readonly />
                </div>

                <!-- Department Name -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Department Name</label>
                    <input type="text" class="form-control" value="@Model.DepartmentName" readonly />
                </div>

                <!-- Course ID -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Course ID</label>
                    <input type="text" class="form-control" value="@Model.SelectedCourse" readonly />
                </div>

                <!-- Course Name -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Course Name</label>
                    <input type="text" class="form-control" value="@Model.courseName" readonly />
                </div>
            </div>
        </div>
    </div>

    <!-- Back Button -->
    <div class="mt-4">
        <a asp-action="Index" asp-controller="Instructor" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to Instructors
        </a>
    </div>
</div>
