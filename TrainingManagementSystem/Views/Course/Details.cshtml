@model TrainingManagementSystem.ViewModels.CourseViewModels.CourseDetailsViewModel

@{
    ViewData["Title"] = "Course Details";
}

<div class="container mt-5">
    <h2 class="text-primary mb-4">
        <i class="bi bi-journal-text me-2"></i> @ViewData["Title"]
    </h2>

    <!-- Course Info -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h4 class="text-secondary mb-3">
                <i class="bi bi-book-half me-2"></i> Course Information
            </h4>

            <div class="row g-3">

                <div class="col-md-6">
                    <label class="form-label fw-bold">Course Name</label>
                    <input type="text" class="form-control" value="@Model.Name" readonly />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Course ID</label>
                    <input type="text" class="form-control" value="@Model.Id" readonly />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Department Name</label>
                    <input type="text" class="form-control" value="@Model.DepartmentName" readonly />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Department Id</label>
                    <input type="text" class="form-control" value="@Model.SelectedDepartment" readonly />
                </div>
              

              

                <div class="col-md-6">
                    <label class="form-label fw-bold">Degree</label>
                    <input type="text" class="form-control" value="@Model.Degree" readonly />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Minimum Degree</label>
                    <input type="text" class="form-control" value="@Model.MinDegree" readonly />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Hours</label>
                    <input type="text" class="form-control" value="@Model.Hours" readonly />
                </div>

              
            </div>
        </div>
    </div>

    <!-- Instructors -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h4 class="text-secondary mb-3">
                <i class="bi bi-people-fill me-2"></i> Instructors
            </h4>

            @if (Model.Instructors != null && Model.Instructors.Any())
            {
                <table class="table table-hover table-striped text-center">
                    <thead class="table-primary">
                        <tr>
                            <th>Instructor ID</th>
                            <th>Instructor Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var instructor in Model.Instructors)
                        {
                            <tr>
                                <td>@instructor.Id</td>
                                <td>@instructor.Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No instructors assigned to this course.</p>
            }
        </div>
    </div>

    <!-- Back Button -->
    <div class="mt-4">
        <a asp-action="Index" asp-controller="Course" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to Courses
        </a>
    </div>
</div>
