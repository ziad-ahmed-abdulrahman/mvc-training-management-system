@model CreateTraineeFormViewModel

@{
    ViewData["Title"] = "Add Trainee";
}

<div class="container mt-5 d-flex justify-content-start">
    <div class="col-sm-6">

        <h2 class="fs-3 mb-4">
            <i class="bi bi-person-plus-fill me-2"></i> @ViewData["Title"]
        </h2>

        <form asp-controller="Trainee" asp-action="Create" method="post">

            <!-- Name -->
            <div class="mb-4">
                <label asp-for="Name" class="form-label fw-bold"></label>
                <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter trainee name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Address -->
            <div class="mb-4">
                <label asp-for="Address" class="form-label fw-bold"></label>
                <input asp-for="Address" class="form-control form-control-lg" placeholder="Enter address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <!-- Grade -->
            <div class="mb-4">
                <label asp-for="Grade" class="form-label fw-bold"></label>
                <select asp-for="Grade" class="form-control form-control-lg">
                    <option value="">Select academic year</option>
                    <option value="1">First Level</option>
                    <option value="2">Second Level</option>
                    <option value="3">Third Level</option>
                    <option value="4">Fourth Level</option>
                    <option value="5">Fifth Level</option>
                    <option value="6">Graduated</option>
                </select>
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>

            <!-- Department Dropdown -->
            <div class="mb-4">
                <label asp-for="SelectedDepartment" class="form-label fw-bold"></label>
                <select asp-for="SelectedDepartment" asp-items="Model.Departments" class="form-control form-control-lg">
                    <option value="0">Select department</option>
                </select>
                <span asp-validation-for="SelectedDepartment" class="text-danger"></span>
            </div>

            <!-- Courses Multi Select -->
            <div class="mb-4">
                <label asp-for="SelectedCourses" class="form-label fw-bold">Select Courses</label>
                <select asp-for="SelectedCourses"
                        asp-items="Model.Courses"
                        class="form-control form-control-lg"
                        multiple="multiple">
                </select>
                <small class="text-muted">Hold Ctrl (Windows) or Command (Mac) to select multiple courses.</small>
                <span asp-validation-for="SelectedCourses" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="d-flex gap-2">
                <a asp-action="Index" asp-controller="Trainee" class="btn btn-secondary btn-lg">
                    <i class="bi bi-arrow-left-circle me-1"></i> Back
                </a>
                <button type="submit" class="btn btn-info btn-lg">
                    <i class="bi bi-plus"></i> Save
                </button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
