@{
    ViewBag.Title = "Navigation Options";
}



    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }

        /* --------- كروت Navigation Options --------- */
        .center-container {
            min-height: 90vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 2rem;
        }

        .cards-row {
            display: flex;
            gap: 2rem;
            flex-wrap: wrap;
            justify-content: center;
        }

        .option-card {
            width: 270px; /* حجم ثابت ومرتب */
            padding: 2.2rem 1rem;
            border-radius: 20px;
            background: #fff;
            text-align: center;
            transition: transform 0.25s ease, box-shadow 0.25s ease;
            cursor: pointer;
        }

            .option-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 12px 24px rgba(0,0,0,0.18);
            }

            .option-card i {
                font-size: 3rem;
                margin-bottom: 1rem;
            }

            .option-card h3 {
                font-size: 1.5rem;
                font-weight: 600;
                margin-bottom: 0.5rem;
            }

            .option-card p {
                color: #6c757d;
                font-size: 0.95rem;
                margin: 0;
            }

        /* ألوان خاصة لكل كارت */
        .department-card i, .department-card h3 {
            color: #0d6efd;
        }

        .course-card i, .course-card h3 {
            color: #6610f2;
        }

        .trainee-card i, .trainee-card h3 {
            color: #198754;
        }

        .instructor-card i, .instructor-card h3 {
            color: #fd7e14;
        }
    </style>




    <div class="center-container">
        <div class="cards-row">

            <a asp-controller="Department" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-lg option-card department-card">
                    <i class="bi bi-building"></i>
                    <h3>Department</h3>
                    <p>Manage all departments easily.</p>
                </div>
            </a>

            <a asp-controller="Course" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-lg option-card course-card">
                    <i class="bi bi-journal-bookmark-fill"></i>
                    <h3>Course</h3>
                    <p>View, add, and manage all courses.</p>
                </div>
            </a>

            <a asp-controller="Trainee" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-lg option-card trainee-card">
                    <i class="bi bi-person-lines-fill"></i>
                    <h3>Trainee</h3>
                    <p>Manage trainee information and status.</p>
                </div>
            </a>

            <a asp-controller="Instructor" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-lg option-card instructor-card">
                    <i class="bi bi-person-workspace"></i>
                    <h3>Instructor</h3>
                    <p>View and manage instructors efficiently.</p>
                </div>
            </a>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

