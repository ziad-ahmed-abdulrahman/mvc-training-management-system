@model TrainingManagementSystem.ViewModels.DepartmentViewModels.DepartmentWithDetails

@{
    ViewData["Title"] = "Department Details";
}

<div class="container mt-5">
    <h2 class="text-primary mb-4">
        <i class="bi bi-building me-2"></i> @ViewData["Title"]
    </h2>

    <!-- Department Info -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h4 class="text-secondary mb-3">
                <i class="bi bi-info-circle me-2"></i> Department Information
            </h4>

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Department ID</label>
                    <input type="text" class="form-control" value="@Model.Id" readonly />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Department Name</label>
                    <input type="text" class="form-control" value="@Model.Name" readonly />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Manager Name</label>
                    <input type="text" class="form-control" value="@Model.ManagerName" readonly />
                </div>

              
            </div>
        </div>
    </div>

    <!-- Courses -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h4 class="text-secondary mb-3">
                <i class="bi bi-journal-text me-2"></i> Courses
            </h4>

            @if (Model.Courses != null && Model.Courses.Any())
            {
                <table class="table table-hover table-striped text-center">
                    <thead class="table-primary">
                        <tr>
                            <th>Course ID</th>
                            <th>Course Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model.Courses)
                        {
                            <tr>
                                <td>@course.Id</td>
                                <td>@course.Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No courses in this department.</p>
            }
        </div>
    </div>

    <!-- Instructors -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h4 class="text-secondary mb-3">
                <i class="bi bi-person-workspace me-2"></i> Instructors
            </h4>

            @if (Model.Instructors != null && Model.Instructors.Any())
            {
                <table class="table table-hover table-striped text-center">
                    <thead class="table-info">
                        <tr>
                            <th>Instructor ID</th>
                            <th>Instructor Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var instructor in Model.Instructors)
                        {
                            <tr>
                                <td>@instructor.Id</td>
                                <td>@instructor.Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No instructors assigned to this department.</p>
            }
        </div>
    </div>

    <!-- Trainees -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h4 class="text-secondary mb-3">
                <i class="bi bi-people-fill me-2"></i> Trainees
            </h4>

            @if (Model.Trainees != null && Model.Trainees.Any())
            {
                <table class="table table-hover table-striped text-center">
                    <thead class="table-success">
                        <tr>
                            <th>Trainee ID</th>
                            <th>Trainee Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var trainee in Model.Trainees)
                        {
                            <tr>
                                <td>@trainee.Id</td>
                                <td>@trainee.Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No trainees in this department.</p>
            }
        </div>
    </div>

    <!-- Back Button -->
    <div class="mt-4">
        <a asp-action="Index" asp-controller="Department" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Back
        </a>
    </div>
</div>
