@model List<Department>

<div class="container">
    <div class="row mb-3">
        <div class="col-sm-8">
            <a asp-action="Create" class="btn btn-add my-add-button mb-2">
                <i class="bi bi-plus-circle-fill"></i> Add Department
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <table class="table modern-table text-center">
                <thead class="gradient-header">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Manager Name</th>
                        <th>Details</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.ManagerName</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                    Details
                                </a>
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                    Edit
                                </a>
                            </td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
